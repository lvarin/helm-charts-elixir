{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "host_name": {
            "type": "string",
            "description": "Host name"
            }
        },
        "clusterType": {
            "description": "Type of cluster, openshift or kubernetes",
            "type": "string",
            "enum": ["openshift", "kubernetes"]
        },
        "storageClass": {
            "description": "Configurable storage class",
            "type": "string"
        },
        "tesk": {
            "properties": {
              "image": {
                "description": "TESK image",
                "default": "docker.io/elixircloud/tesk-api:1.1.0"
              },
              "debug": {
                "description": "Activate debug log",
                "type": "boolean",
                "default": false
              }
            }
        }
}
